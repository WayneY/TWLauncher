<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TWLauncherFramework.MainWindow"
        Title="MainWindow" Height="650" Width="800">
    <Grid Margin="0,0,-8,-7">
        <Grid.Background>
            <ImageBrush ImageSource="pic/background.png"/>
        </Grid.Background>
        <Button x:Name="Chinese_start" HorizontalAlignment="Left" Margin="449,22,0,0" VerticalAlignment="Top" Width="226" Height="73" Click="Chinese_start_Click">
            <Button.Background>
                <ImageBrush ImageSource="pic/button_1.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="English_start" HorizontalAlignment="Left" Margin="449,109,0,0" VerticalAlignment="Top" Width="226" Height="73" Click="English_start_Click">
            <Button.Background>
                <ImageBrush ImageSource="pic/button_2.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Update_check"  HorizontalAlignment="Left" Margin="449,196,0,0" VerticalAlignment="Top" Width="226" Height="73" Click="Update_check_Click">
            <Button.Background>
                <ImageBrush ImageSource="pic/button_3.png"/>
            </Button.Background>
        </Button>
        <Grid Name="ImageGrid" HorizontalAlignment="Left" Height="208" Margin="139,329,0,0" VerticalAlignment="Top" Width="516">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="258"/>
                <ColumnDefinition Width="258"/>
            </Grid.ColumnDefinitions>
            <ItemsControl Grid.Column="0" Name="first_mods_in_image"  HorizontalAlignment="Left" Background="#FF1C1C1C" Margin="0,-23,7,23" Width="251">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <CheckBox Grid.Row="0" Margin="5,2,0,0" Name="leftCB"  IsChecked="{Binding isModActive}" Content ="{Binding packname}"/>
                            <Image Grid.Row="1"  Name="leftImage"  HorizontalAlignment="Center" Height="145" Margin="0,0,0,0"  Width="251" Source="{Binding img}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl Grid.Column="1"  Name="second_mods_in_image"  HorizontalAlignment="Right" Background="#FF1C1C1C" Margin="0,-23,7,23" Width="251">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <CheckBox Grid.Row="0" Margin="5,2,0,0" Name="rightCB"  IsChecked="{Binding isModActive}" Content="{Binding packname}"/>
                            <Image Grid.Row="1" Name="rightImage" HorizontalAlignment="Center" Height="145" Margin="0,0,0,0"  Width="251" Source="{Binding img}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Button x:Name="image_show" Content="Show image" HorizontalAlignment="Left" Margin="660,299,0,0" VerticalAlignment="Top" Width="81" Height="25" Click="image_show_Click" RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <ImageBrush ImageSource="pic/list.png">
                    <ImageBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1" ScaleX="-1"/>
                            <SkewTransform AngleY="0" AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform Y="22"/>
                        </TransformGroup>
                    </ImageBrush.RelativeTransform>
                </ImageBrush>
            </Button.Background>
        </Button>
        <Button x:Name="list_show" Content="Show list" HorizontalAlignment="Left" Margin="660,329,0,0" VerticalAlignment="Top" Width="81" Height="25" Click="list_show_Click"/>
        <Button Name="prev" HorizontalAlignment="Left" Margin="61,405,0,0" VerticalAlignment="Top" Width="18" Height="37" Click="prev_Click">
            <Button.Background>
                <ImageBrush ImageSource="pic/arrow_1.png"/>
            </Button.Background>
        </Button>
        <Button Name="next" HorizontalAlignment="Left" Margin="717,405,0,0" VerticalAlignment="Top" Width="18" Height="37" Click="next_Click">
            <Button.Background>
                <ImageBrush ImageSource="pic/arrow_2.png"/>
            </Button.Background>
        </Button>
        <ListBox x:Name="Packs" HorizontalAlignment="Left" Height="183" VerticalAlignment="Top" Width="550" Margin="80,510,0,0" Visibility="Hidden">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{Binding isModActive}"/>
                        <TextBlock Grid.Column="1" Text="{Binding packname}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="up" Content="Up" HorizontalAlignment="Left" Margin="47,510,0,0" VerticalAlignment="Top" Width="28" Height="47" Click="up_Click" Visibility="Hidden"/>
        <Button x:Name="down" Content="Down" HorizontalAlignment="Left" Margin="47,638,0,0" VerticalAlignment="Top" Width="28" Height="47" Click="down_Click" Visibility="Hidden"/>
        <Button x:Name="close_window" HorizontalAlignment="Left" Margin="741,30,0,0" VerticalAlignment="Top" Width="26" Height="26" Click="close_window_Click">
            <Button.Background>
                <ImageBrush ImageSource="pic/close.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
