<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TWLauncherFramework.MainWindow"
        Title="MainWindow" Height="771.05" Width="704">
    <Grid Margin="0,0,-8,-7">
        <Button x:Name="Chinese_start" Content="启动中文" HorizontalAlignment="Left" Margin="540,26,0,0" VerticalAlignment="Top" Width="143" Height="53" Click="Chinese_start_Click"/>
        <Button x:Name="English_start" Content="启动英文" HorizontalAlignment="Left" Margin="540,96,0,0" VerticalAlignment="Top" Width="143" Height="53" Click="English_start_Click"/>
        <Button x:Name="Update_check" Content="检查更新" HorizontalAlignment="Left" Margin="540,172,0,0" VerticalAlignment="Top" Width="143" Height="53" Click="Update_check_Click"/>
        <Grid Name="ImageGrid" HorizontalAlignment="Left" Height="221" Margin="149,437,0,0" VerticalAlignment="Top" Width="404">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="202"/>
                <ColumnDefinition Width="202"/>
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0" Grid.Row="0" Margin="5,2,0,0" Name="leftCB" IsChecked="{Binding isModActive}"/>
            <CheckBox Grid.Column="1" Grid.Row="0" Margin="5,2,0,0" Name="rightCB" IsChecked="{Binding isModActive}"/>
            <Image Grid.Column="0" Grid.Row="1"  Name="leftImage"  HorizontalAlignment="Left" Height="199" Margin="15,0,0,0"  Width="174" Source="blank.png"/>
            <Image Grid.Column="1" Grid.Row="1" Name="rightImage" HorizontalAlignment="Left" Height="199" Margin="15,0,0,0"  Width="174" Source="blank.png"/>
        </Grid>
        <Button x:Name="image_show" Content="Show image" HorizontalAlignment="Left" Margin="591,401,0,0" VerticalAlignment="Top" Width="81" Height="25" Click="image_show_Click"/>
        <Button x:Name="list_show" Content="Show list" HorizontalAlignment="Left" Margin="591,437,0,0" VerticalAlignment="Top" Width="81" Height="25" Click="list_show_Click"/>
        <Button Name="prev" Content="prev" HorizontalAlignment="Left" Margin="22,494,0,0" VerticalAlignment="Top" Width="28" Height="80" Click="prev_Click"/>
        <Button Name="next" Content="next" HorizontalAlignment="Left" Margin="655,494,0,0" VerticalAlignment="Top" Width="28" Height="80" Click="next_Click"/>
        <ListBox x:Name="Packs" HorizontalAlignment="Left" Height="183" VerticalAlignment="Top" Width="550" Margin="80,510,0,0" Visibility="Hidden">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{Binding isModActive}"/>
                        <TextBlock Grid.Column="1" Text="{Binding packname}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="up" Content="Up" HorizontalAlignment="Left" Margin="47,510,0,0" VerticalAlignment="Top" Width="28" Height="47" Click="up_Click" Visibility="Hidden"/>
        <Button x:Name="down" Content="Down" HorizontalAlignment="Left" Margin="47,638,0,0" VerticalAlignment="Top" Width="28" Height="47" Click="down_Click" Visibility="Hidden"/>
        
    </Grid>
</Window>
