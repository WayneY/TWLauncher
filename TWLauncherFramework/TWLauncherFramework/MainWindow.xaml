<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Name="Main_Window" mc:Ignorable="d" x:Class="TWLauncherFramework.MainWindow"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        Closing="Window_Closing"
        Title="Total War:Rome II Launcher" Height="480" Width="650"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/pic/clanlong.ico">
    <Window.Resources>
        <Style x:Key="styleCustomCheckBox" TargetType="{x:Type CheckBox}">
            <Setter Property="FontFamily" Value="Segoe Script"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="imageCheckBox" Source="pic/icon_non-used.png" Width="21" Height="20" HorizontalAlignment="Left" Margin="5,0,0,0"></Image>
                            <ContentPresenter Margin="5,10,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="imageCheckBox" Property="Source" Value="pic/icon_selected.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="styleCustomButton" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="{DynamicResource ResourceKey=}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Width="640" Height="480" Margin="0,0,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top">

        <Grid x:Name="StartView" Margin="0,0,0,0" Visibility="Visible">
            <Grid.Background>
                <ImageBrush ImageSource="pic/form_start.png"/>
            </Grid.Background>
            <Button x:Name="Chinese_start" HorizontalAlignment="Left" Margin="80,245,0,0" VerticalAlignment="Top" Width="240" Height="72" Click="Chinese_start_Click" Style="{StaticResource styleCustomButton}">
                <Button.Background>
                    <ImageBrush ImageSource="pic/btn240_launch_cn.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="English_start" HorizontalAlignment="Left" Margin="80,319,0,0" VerticalAlignment="Top" Width="240" Height="72" Click="English_start_Click" Style="{StaticResource styleCustomButton}">
                <Button.Background>
                    <ImageBrush ImageSource="pic/btn240_launch_en.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="Update_check"  HorizontalAlignment="Left" Margin="322,245,0,0" VerticalAlignment="Top" Width="240" Height="72" Click="Update_check_Click" Style="{StaticResource styleCustomButton}">
                <Button.Background>
                    <ImageBrush ImageSource="pic/btn240_checkforupdate.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="Mod_manager"  HorizontalAlignment="Left" Margin="322,319,0,0" VerticalAlignment="Top" Width="240" Height="72"  Style="{StaticResource styleCustomButton}" Click="Mod_manager_Click">
                <Button.Background>
                    <ImageBrush ImageSource="pic/btn240_modmanager.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid x:Name="ModView" Width="640" Height="480" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden">
            <Grid.Background>
                <ImageBrush ImageSource="pic/form_modmanager_thumb.png"/>
            </Grid.Background>
            <Button x:Name="image_show" HorizontalAlignment="Left" Margin="127,198,0,0" VerticalAlignment="Top" Width="128" Height="32" Click="image_show_Click" Style="{StaticResource styleCustomButton}" MouseEnter="image_show_MouseOver">
                <Button.Background>
                    <ImageBrush ImageSource="pic/btn128_thumb.png">
                    </ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="list_show"  HorizontalAlignment="Left" Margin="256,198,0,0" VerticalAlignment="Top" Width="128" Height="32" Click="list_show_Click" BorderThickness="0" Style="{StaticResource styleCustomButton}">
                <Button.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="pic/btn128_list.png" AlignmentY="Bottom"/>
                </Button.Background>
            </Button>
            <Button x:Name="back_start"  HorizontalAlignment="Left" Margin="385,198,0,0" VerticalAlignment="Top" Width="128" Height="32"  BorderThickness="0" Style="{StaticResource styleCustomButton}" Click="back_start_Click">
                <Button.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="pic/btn128_toggle.png" AlignmentY="Bottom"/>
                </Button.Background>
            </Button>
            <Grid Name="ImageGrid" Height="200" Margin="0,231,0,0" VerticalAlignment="Top" Visibility="Hidden" Width="640" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="268"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="268"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Button Name="prev" Grid.Column="0"  HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="40" Height="200" Click="prev_Click" Style="{StaticResource styleCustomButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="pic/btn_arrow_left.png"/>
                    </Button.Background>
                </Button>

                <ItemsControl Grid.Column="2" Name="first_mods_in_image"  Margin="0,0,0,0" HorizontalAlignment="Left" Background="#FF1C1C1C" Width="251">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="160"/>
                                </Grid.RowDefinitions>
                                <CheckBox Grid.Row="0" Margin="0,0,0,0" Name="leftCB"  IsChecked="{Binding isModActive}" Content ="{Binding packname}" Style="{StaticResource styleCustomCheckBox}" Foreground="White"/>
                                <Image Grid.Row="1"  Name="leftImage"  HorizontalAlignment="Center" Height="145" Margin="0,0,0,0"  Width="251" Source="{Binding img}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="4"  Name="second_mods_in_image" Margin="0,0,0,0" HorizontalAlignment="Right" Background="#FF1C1C1C"  Width="251">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="160"/>
                                </Grid.RowDefinitions>
                                <CheckBox Grid.Row="0" Margin="0,0,0,0" Name="rightCB"  IsChecked="{Binding isModActive}" Content="{Binding packname}" Style="{StaticResource styleCustomCheckBox}"/>
                                <Image Grid.Row="1" Name="rightImage" HorizontalAlignment="Center" Height="145" Margin="0,0,0,0"  Width="251" Source="{Binding img}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Name="next" Grid.Column="6" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="40" Height="200" Click="next_Click" Style="{StaticResource styleCustomButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="pic/btn_arrow_right.png"/>
                    </Button.Background>
                </Button>
            </Grid>
            <Grid Name="ListGrid" Visibility="Visible" Margin="40,231,0,0" Width="560" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button x:Name="up" Grid.Row="0"  HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="24" Height="24" Click="up_Click" BorderThickness="0" Style="{StaticResource styleCustomButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="pic/arrow_up.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="down" Grid.Row="0"  HorizontalAlignment="Left" Margin="24,0,0,0" VerticalAlignment="Top" Width="24" Height="24" Click="down_Click" BorderThickness="0" Style="{StaticResource styleCustomButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="pic/arrow_down.png"/>
                    </Button.Background>
                </Button>
                <Image Grid.Row="0" Margin="48,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="272" Height="24" Source="pic/MOD_name.png"/>
                <Image Grid.Row="0" Margin="320,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="24" Source="pic/datetime160x24.png" />
                <Image Grid.Row="0" Margin="480,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="24" Source="pic/size80x24.png" />
                <ListBox x:Name="Packs" Grid.Row="1" HorizontalAlignment="Left" Height="176" VerticalAlignment="Top" Width="560" Margin="0,0,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition Width="272" />
                                    <ColumnDefinition Width="160" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" IsChecked="{Binding isModActive}" Style="{StaticResource styleCustomCheckBox}"/>
                                <TextBlock Grid.Column="1" Text="{Binding packname}" FontFamily="Segoe Script" FontSize="16"/>
                                <TextBlock Grid.Column="2" Text="{Binding packdate}" FontFamily="Segoe Script" FontSize="10"/>
                                <TextBlock Grid.Column="3" Text="{Binding packsize}" FontFamily="Segoe Script" FontSize="10"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
        </Grid>
        <Button x:Name="close_window" HorizontalAlignment="Left" Margin="595,15,0,0" VerticalAlignment="Top" Width="32" Height="32" Click="close_window_Click" Style="{StaticResource styleCustomButton}" Panel.ZIndex="3" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="pic/close.png"/>
            </Button.Background>
        </Button>
    </Grid>

</Window>
